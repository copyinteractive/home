    <script>
        const allQuestions = [
            {q: "Find the compound interest on N80,000 for 3 years at 5% per annum.", options: ["N10,500", "N12,600", "N12,000", "N10,125"], answer: 1},
            {q: "If p is one-third of the positive difference between 45 and (6 √ó 5), find p.", options: ["5", "10", "7", "15"], answer: 0},
            {q: "Solve: 7x = 3x + 20", options: ["4", "5", "6", "7"], answer: 1},
            {q: "Solve: 9k - 4 = 3k + 8", options: ["1", "2", "3", "4"], answer: 1},
            {q: "Solve: m - 25 = m¬≤", options: ["5", "-5", "0", "Both -5 and 5"], answer: 1},
            {q: "Solve: 3y + 2 = 4(y - 5)", options: ["18", "20", "22", "24"], answer: 2},
            {q: "In the equations 2x + 3y = 18 and x - y = 2, find the value of x.", options: ["4", "6", "8", "10"], answer: 1},
            {q: "In the equations 2x + 3y = 18 and x - y = 2, find the value of y.", options: ["2", "3", "4", "5"], answer: 0},
            {q: "Two phones and three earphones weigh 760 g. One phone and five earphones weigh 620 g. What is the mass of one phone?", options: ["250 g", "260 g", "300 g", "320 g"], answer: 1},
            {q: "Make x the subject: kx¬≥ = p", options: ["x = ‚àö(p/k)", "x = ¬≥‚àö(p/k)", "x = p¬≥/k", "x = k/p¬≥"], answer: 1},
            {q: "Simplify: 6p - 14 - p - 3p + 20", options: ["2p + 6", "4p - 6", "12p - 6", "2p - 6"], answer: 0},
            {q: "Factorize: 3z¬≤ - 27", options: ["3(z + 9)", "3(z¬≤ - 9)", "3(z - 3)(z + 3)", "(z - 3)(z + 3)"], answer: 2},
            {q: "In base 2: 11001 - 10101 = ?", options: ["00100", "01100", "01000", "10010"], answer: 0},
            {q: "Solve: 5(3x - 2) = 4(x + 7)", options: ["6", "7", "5", "4"], answer: 3},
            {q: "Solve: s¬≤ = 3s + 18", options: ["6", "-6", "Both 6 and -6", "3"], answer: 0},
            {q: "When the sum of 48 and a number is divided by 6, the result equals three times the number. Find the number.", options: ["2", "3", "4", "5"], answer: 2},
            {q: "If y = 25x¬≤ and y = 2,500, find x.", options: ["5", "10", "15", "20"], answer: 1},
            {q: "The sum of five consecutive whole numbers is 145. What is the middle number?", options: ["27", "28", "29", "30"], answer: 2},
            {q: "Using T = 30m + 18, find the time to cook 1.5 kg of beans.", options: ["63 min", "70 min", "63.5 min", "55 min"], answer: 0},
            {q: "If it takes 108 minutes to boil a mass m of beans, using T = 30m + 18, what is m?", options: ["2 kg", "3 kg", "4 kg", "5 kg"], answer: 1}
        ];

        let selectedQuestions = [];
        let currentQuestion = 0;
        let userAnswers = [];
        let timer;
        let timeRemaining = 420;
        let startTime;

        function shuffleArray(array) {
            const shuffled = [...array];
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            return shuffled;
        }

        function startQuiz() {
            selectedQuestions = shuffleArray(allQuestions).slice(0, 10);
            userAnswers = new Array(10).fill(null);
            currentQuestion = 0;
            startTime = Date.now();
            
            document.getElementById('startScreen').classList.add('hidden');
            document.getElementById('quizScreen').classList.remove('hidden');
            
            displayQuestion();
            startTimer();
        }

        function startTimer() {
            timer = setInterval(() => {
                timeRemaining--;
                const minutes = Math.floor(timeRemaining / 60);
                const seconds = timeRemaining % 60;
                const timerElement = document.getElementById('timer');
                timerElement.textContent = `‚è±Ô∏è ${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
                
                if (timeRemaining <= 60) {
                    timerElement.classList.add('warning');
                }
                
                if (timeRemaining <= 0) {
                    clearInterval(timer);
                    submitQuiz();
                }
            }, 1000);
        }

        function displayQuestion() {
            const question = selectedQuestions[currentQuestion];
            document.getElementById('questionText').textContent = `${currentQuestion + 1}. ${question.q}`;
            document.getElementById('questionCounter').textContent = `Question ${currentQuestion + 1}/10`;
            
            const optionsContainer = document.getElementById('optionsContainer');
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, index) => {
                const optionDiv = document.createElement('div');
                optionDiv.className = 'option';
                if (userAnswers[currentQuestion] === index) {
                    optionDiv.classList.add('selected');
                }
                optionDiv.textContent = `${String.fromCharCode(65 + index)}. ${option}`;
                optionDiv.onclick = () => selectOption(index);
                optionsContainer.appendChild(optionDiv);
            });
            
            updateProgress();
            updateNavButtons();
        }

        function selectOption(index) {
            userAnswers[currentQuestion] = index;
            displayQuestion();
        }

        function updateProgress() {
            const answeredCount = userAnswers.filter(a => a !== null).length;
            const progress = (answeredCount / 10) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function updateNavButtons() {
            document.getElementById('prevBtn').style.display = currentQuestion === 0 ? 'none' : 'block';
            document.getElementById('nextBtn').style.display = currentQuestion === 9 ? 'none' : 'block';
            document.getElementById('submitBtn').style.display = currentQuestion === 9 ? 'block' : 'none';
        }

        function prevQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                displayQuestion();
            }
        }

        function nextQuestion() {
            if (currentQuestion < 9) {
                currentQuestion++;
                displayQuestion();
            }
        }

        function submitQuiz() {
            clearInterval(timer);
            
            let correct = 0;
            let wrong = 0;
            let unanswered = 0;
            
            selectedQuestions.forEach((question, index) => {
                if (userAnswers[index] === null) {
                    unanswered++;
                } else if (userAnswers[index] === question.answer) {
                    correct++;
                } else {
                    wrong++;
                }
            });
            
            const score = correct * 10;
            const totalTime = Math.floor((Date.now() - startTime) / 1000);
            const minutes = Math.floor(totalTime / 60);
            const seconds = totalTime % 60;
            
            document.getElementById('quizScreen').classList.add('hidden');
            document.getElementById('resultScreen').classList.remove('hidden');
            
            document.getElementById('scoreDisplay').textContent = `${score}/100`;
            document.getElementById('correctCount').textContent = correct;
            document.getElementById('wrongCount').textContent = wrong;
            document.getElementById('unansweredCount').textContent = unanswered;
            document.getElementById('timeTaken').textContent = `${minutes}:${String(seconds).padStart(2, '0')}`;
            
            let message = '';
            if (score >= 90) message = 'üåü Outstanding! You are a Math Champion!';
            else if (score >= 80) message = 'üéâ Excellent work! Keep it up!';
            else if (score >= 70) message = 'üëç Great job! You are doing well!';
            else if (score >= 60) message = 'üëå Good effort! Practice makes perfect!';
            else message = 'üí™ Keep practicing! You will improve!';
            
            document.getElementById('resultMessage').textContent = message;
        }
    </script>
</body>
</html>
